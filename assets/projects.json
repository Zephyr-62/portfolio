---
layout: null
permalink: /projects.json
---
{
    {% for project in site.projects %}
    "{{ project.projId }}":{
        "title": "{{ project.title }}",
        "subtitle": "{{ project.subtitle }}",
        "startDate": "{{ project.startDate }}", 
        "endDate": "{{ project.endDate }}",
        "halted": {{ project.halted }},
        "featured": {{ project.featured }},
        "relevance": {{project.relevance}},
        "categoryTags": [{% for tag in project.categoryTags %}"{{ tag }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
        "techTags": [{% for tag in project.techTags %}"{{ tag }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
        "shortDescription": "{{ project.shortDescription }}",
        "longDescription":[{% for element in project.longDescription %}
            {% if element.type == "text" %}
                {
                    "type": "htmlInsert",
                    "content": {{ element.content | jsonify }}
                }                
            {% elsif element.type == "yt" %}
                {
                    "type": "yt",
                    "videoId": "{{ element.videoId }}"
                }                
            {% elsif element.type == "media" %}
                {
                    "type": "media",
                    "id": "{{ element.id }}"
                }
            {% endif %}
            {% unless forloop.last %},{% endunless %}
        {%- endfor %}],
        "ldDescription": "{{ project.ldDescription }}",
        "toolDescription": "{{ project.toolDescription }}",
        "contributions-short": [{% for contribution in project.contributions-short %}"{{ contribution }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
        "contributions": [{% for contribution in project.contributions %}"{{ contribution }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
        "teamSize": "{{ project.teamSize }}",
        "images": [{% for image in project.images %}
            {
                "path": "{{ 'images/projects/' | append: project.projId | append: '/' | append: image.name | relative_url }}",
                "footnote": "{{image.footnote}}",
                "alt": "{{image.alt}}"{% if image.thumbnail %},
                "thumbnail": "{{ 'images/projects/' | append: project.projId | append: '/' | append: image.thumbnail | relative_url }}"{% endif %}
            }{% unless forloop.last %},{% endunless %}{% endfor %}
        ],
        "devImages": [{% for image in project.devImages %}
            {
                "id": "{{image.id}}",
                "path": "{{ 'images/projects/' | append: project.projId | append: '/' | append: image.name | relative_url }}",
                "footnote": "{{image.footnote}}",
                "alt": "{{image.alt}}"{% if image.thumbnail %},
                "thumbnail": "{{ 'images/projects/' | append: project.projId | append: '/' | append: image.thumbnail | relative_url }}"{% endif %}
            }{% unless forloop.last %},{% endunless %}{% endfor %}
        ]
    }{% unless forloop.last %},{% endunless %}{% endfor %}            
}